<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="reginfo1.Kalkulator1">
    <ContentPage.Content>
        <StackLayout>
            <Label Padding="0,10,0,0" Text="Izaberite vrstu motornog vozila" HorizontalOptions="CenterAndExpand" FontSize="Body" FontFamily="Roboto.ttf#Roboto"/>
            <BoxView 
                   HeightRequest="1"
                   Color="#ff0444"
                   Margin ="20, 0, 20, 0"/>


            <Grid Margin="50" ColumnSpacing="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame Padding="5" BackgroundColor="Transparent"  >
                    <ImageButton Source="car.png" BackgroundColor="Transparent"  Clicked="ImageButton_Clicked"/>
                </Frame>
                <Frame Padding="5" BackgroundColor="Transparent"  Grid.Row="0" Grid.Column="1">
                    <ImageButton Source="moto.png" BackgroundColor="Transparent" Clicked="ImageButton_Clicked_1"/>
                </Frame>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>